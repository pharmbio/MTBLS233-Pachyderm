{
  "pipeline": {
    "name": "FileFilter"
  },
   "transform": {
    "image": "container-registry.phenomenal-h2020.eu/phnmnl/openms:v2.1.0_cv0.2.15",
    "cmd": [ "/bin/bash" ],
    "stdin": [
    "for filename in /pfs/mrpo/*;",
    "do",
    "shortname=$(basename $filename)",
    "FileFilter -in ${filename} -out /pfs/out/${shortname}",
    "done"
    ]
  },
"parallelism_spec": {
    "constant": 4
  },
 "input": {
    "atom": {
      "repo": "mrpo",
      "glob": "/*"
    }
  },
  "scale_down_threshold": "5m"
}
