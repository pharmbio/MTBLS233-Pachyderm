{
  "pipeline": {
    "name": "FeatureLinker"
  },
  "transform": {
    "image": "novella/my-openms:2",
    "cmd": [ "/bin/bash" ],
    "stdin": [ 
    "dte=$(date '+%d_%m_%Y_%H_%M')",
    "FILES=$(find /pfs/FeatureFinder -name \"*.featureXML\")",
    "FeatureLinkerUnlabeledQT -in $FILES -out /pfs/out/${dte}linked.consensusXML"
    ]
  },
"parallelism_spec": {
    "constant": 1
  },
 "input": {
    "atom": {
      "repo": "FeatureFinder",
      "glob": "/"
    }
  },
  "scale_down_threshold": "1h"
}