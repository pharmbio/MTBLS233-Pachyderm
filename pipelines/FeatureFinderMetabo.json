{
  "pipeline": {
    "name": "FeatureFinder"
  },
  "transform": {
    "image": "novella/my-openms:2",
    "cmd": [ "/bin/bash" ],
    "stdin": [
    "for filename in /pfs/PeakPicker/*;",
    "do",
    "shortname=$(basename $filename)",
    "FeatureFinderMetabo -in ${filename} -out /pfs/out/${shortname}",
    "done"
    ]
  },
"parallelism_spec": {
    "constant": 2
  },
 "input": {
    "atom": {
      "repo": "FileFilter",
      "glob": "/*"
    }
  },
  "scale_down_threshold": "5m"
}