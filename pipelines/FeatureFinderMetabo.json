{
  "pipeline": {
    "name": "FeatureFinder"
  },
  "transform": {
    "image": "container-registry.phenomenal-h2020.eu/phnmnl/openms:v2.1.0_cv0.2.15",
    "cmd": [ "/bin/bash" ],
    "stdin": [
    "for filename in /pfs/FileFilter/*;",
    "do",
    "shortname=$(basename $filename)",
    "shortname=${shortname%.*}",
    "FeatureFinderMetabo -in ${filename} -out /pfs/out/${shortname}.featureXML",
    "done"
    ]
  },
  "parallelism_spec": {
    "constant": 4
  },
  "input": {
    "atom": {
      "repo": "FileFilter",
      "glob": "/*"
    }
  },
  "scale_down_threshold": "5m"
}
