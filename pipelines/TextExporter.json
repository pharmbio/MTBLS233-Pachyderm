{
  "pipeline": {
    "name": "TextExporter"
  },
   "transform": {
    "image": "novella/my-openms:2",
    "cmd": [ "/bin/bash" ],
    "stdin": [
    "for filename in /pfs/FileFilter/*;",
    "do",
    "shortname=$(basename $filename)",
    "shortname=${shortname%.*}",
    "dash='_'",
    "TextExporter -in ${filename} -out /pfs/out/${shortname}${dash}tab.csv -ini /pfs/params/TEparam.ini",
    "done"
    ]
  },
  "parallelism_spec": {
    "strategy": "CONSTANT",
    "constant": 1
  },
  "inputs": [
    {
      "repo": {
        "name": "FileFilter"
      },
      "method": {
        "partition": "REPO",
        "incremental": "DIFF"
      }
    },
    {
      "repo": {
        "name": "params"
        },
      "method": {
        "partition": "REPO",
        "incremental": "DIFF"
      }
    }
  ]
}